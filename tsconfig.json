{
  "compilerOptions": {
   
    "target": "ES2022", 
    "lib": ["ES2022"],

    "esModuleInterop": true,
    "skipLibCheck": true,
    
    "moduleResolution": "bundler", 
    "allowSyntheticDefaultImports": true, 
    
    "strict": true, 
    "noImplicitAny": true, 
    
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": true,
    
    
    "sourceMap": true,
    
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "dist"
  ]
}