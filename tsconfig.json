{
  "compilerOptions": {
   
    "target": "ES2020", 
    "lib": ["ES2020"],

    "esModuleInterop": true,
    "skipLibCheck": true,
    
    "moduleResolution": "bundler", 
    "allowSyntheticDefaultImports": true, 
    "outDir": "./dist", 
    
    "strict": true, 
    "noImplicitAny": true, 
    
    "noUnusedLocals": true, 
    "noUnusedParameters": true, 
    "noImplicitReturns": true, 
    "noFallthroughCasesInSwitch": true,
    
    
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./types/*"]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}